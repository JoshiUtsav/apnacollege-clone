{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": false, 
    "removeComments": true, 
    "noImplicitAny": true,
    "noUnusedLocals": true, 
    "noUnusedParameters": true 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
